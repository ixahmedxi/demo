{
  "name": "noodle",
  "version": "0.0.1",
  "private": true,
  "description": "Rethinking Student Productivity",
  "homepage": "https://noodle.run",
  "bugs": "https://github.com/noodle-run/noodle/issues",
  "repository": "https://github.com/noodle-run/noodle",
  "license": "AGPL-3.0-or-later",
  "author": "Noodle RUN LTD <contact@noodle.run>",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "format": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:fix": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint:md": "markdownlint \"**/*.md\" --dot --ignore node_modules --ignore .changeset",
    "spellcheck": "cspell \"**\" --gitignore --dot --no-progress --cache --unique"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/bun": "^1.1.11",
    "cspell": "^8.15.1",
    "markdownlint": "^0.35.0",
    "markdownlint-cli": "^0.42.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "typescript": "^5.6.3"
  }
}
